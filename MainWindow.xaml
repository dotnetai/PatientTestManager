<Window x:Class="PatientTestManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helper="clr-namespace:PatientTestManager.Helper"
        mc:Ignorable="d"
        Title="Patient Test Manager" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <helper:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Patient Input -->
            <RowDefinition Height="*"/>
            <!-- Patients + Tests -->
            <RowDefinition Height="Auto"/>
            <!-- Test Input -->
            <RowDefinition Height="Auto"/>
            <!-- Report -->
        </Grid.RowDefinitions>

        <!-- ====================== PATIENT SECTION ====================== -->
        <GroupBox Header="Patient Management" Grid.Row="0" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <Label Content="Name:" VerticalAlignment="Center"/>
                <TextBox x:Name="NameTextBox" Width="180" Margin="5" 
                         Text="{Binding PatientName, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Enter patient full name"/>

                <Label Content="Date of Birth:" VerticalAlignment="Center"/>
                <DatePicker x:Name="DobPicker" Width="130" Margin="5"/>

                <Label Content="Gender:" VerticalAlignment="Center"/>
                <ComboBox x:Name="GenderComboBox" Width="100" Margin="5" SelectedIndex="0">
                    <ComboBoxItem Content="Male"/>
                    <ComboBoxItem Content="Female"/>
                    <ComboBoxItem Content="Other"/>
                </ComboBox>

                <Button Content="Add Patient" Width="110" Margin="10,5" Click="AddPatient_Click"/>
                <Button Content="Update Patient" Width="120" Margin="5" Click="UpdatePatient_Click" IsEnabled="{Binding ElementName=PatientGrid, Path=SelectedItem, Converter={StaticResource NullToBoolConverter}}"/>
                <Button Content="Delete Patient" Width="120" Margin="5" Click="DeletePatient_Click" IsEnabled="{Binding ElementName=PatientGrid, Path=SelectedItem, Converter={StaticResource NullToBoolConverter}}"/>
            </StackPanel>
        </GroupBox>

        <!-- ====================== PATIENTS AND TESTS GRIDS ====================== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Patients List -->
            <GroupBox Header="Patients" Grid.Column="0">
                <DataGrid x:Name="PatientGrid"
                          ItemsSource="{Binding Patients}"
                          SelectedItem="{Binding SelectedPatient, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionChanged="PatientGrid_SelectionChanged"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Date of Birth" Binding="{Binding DateOfBirth, StringFormat=d}" Width="120"/>
                        <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                        <DataGridTextColumn Header="Tests Count" Binding="{Binding Tests.Count}" IsReadOnly="True" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Tests List -->
            <GroupBox Header="Medical Tests for Selected Patient" Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Row 1: Test Name + Test Date -->
                        <RowDefinition Height="Auto"/>
                        <!-- Row 2: Result + Within Threshold -->
                        <RowDefinition Height="Auto"/>
                        <!-- Row 3: Buttons -->
                        <RowDefinition Height="*"/>
                        <!-- Row 4: DataGrid -->
                    </Grid.RowDefinitions>

                    <!-- Row 1: Test Name and Test Date -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,8" VerticalAlignment="Center">
                        <Label Content="Test Name:" VerticalAlignment="Center" Width="90"/>
                        <TextBox x:Name="TestNameTextBox" Width="200" Margin="5"/>

                        <Label Content="Test Date:" VerticalAlignment="Center" Width="90"/>
                        <DatePicker x:Name="TestDatePicker" Width="140" Margin="5"/>
                    </StackPanel>

                    <!-- Row 2: Result and Within Threshold -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,12" VerticalAlignment="Center">
                        <Label Content="Result:" VerticalAlignment="Center" Width="90"/>
                        <TextBox x:Name="TestResultTextBox" Width="120" Margin="5" ToolTip="Numeric value only"/>

                        <Label Content="" Width="90"/>
                        <!-- Spacer for alignment -->
                        <CheckBox x:Name="IsWithinThresholdCheckBox" 
                      Content="Within Threshold" 
                      Margin="95,0,0,0" 
                      VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Row 3: Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,5,10,15" HorizontalAlignment="Left">
                        <Button Content="Add Test" Width="100" Margin="5" Click="AddTest_Click"/>
                        <Button Content="Update Test" Width="110" Margin="5" Click="UpdateTest_Click"
                    IsEnabled="{Binding ElementName=TestGrid, Path=SelectedItem, Converter={StaticResource NullToBoolConverter}}"/>
                        <Button Content="Delete Test" Width="110" Margin="5" Click="DeleteTest_Click"
                    IsEnabled="{Binding ElementName=TestGrid, Path=SelectedItem, Converter={StaticResource NullToBoolConverter}}"/>
                    </StackPanel>

                    <!-- Row 4: Tests DataGrid -->
                    <DataGrid x:Name="TestGrid" Grid.Row="3"
                  ItemsSource="{Binding SelectedPatient.Tests}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionChanged="TestGrid_SelectionChanged"
                  Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="50"/>
                            <DataGridTextColumn Header="Test Name" Binding="{Binding TestName}" Width="*"/>
                            <DataGridTextColumn Header="Test Date" Binding="{Binding TestDate, StringFormat=d}" Width="110"/>
                            <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="90"/>
                            <DataGridCheckBoxColumn Header="Within Threshold" Binding="{Binding IsWithinThreshold}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- ====================== REPORT SECTION ====================== -->
        <GroupBox Header="Test Results Report" Grid.Row="3" Margin="0,20,0,0">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <Label Content="From Date:"/>
                    <DatePicker x:Name="ReportFromDatePicker" Width="130" Margin="5"/>

                    <Label Content="To Date:"/>
                    <DatePicker x:Name="ReportToDatePicker" Width="130" Margin="5"/>

                    <Button Content="Generate Report" Width="140" Margin="20,0" Click="GenerateReport_Click"/>
                </StackPanel>

                <DataGrid x:Name="ReportGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          MaxHeight="200"
                          Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Patient ID" Binding="{Binding PatientId}" Width="80"/>
                        <DataGridTextColumn Header="Patient Name" Binding="{Binding PatientName}" Width="*"/>
                        <DataGridTextColumn Header="Total Tests" Binding="{Binding TotalTests}" Width="100"/>
                        <DataGridTextColumn Header="% Within Threshold" Binding="{Binding PercentageWithinThreshold, StringFormat={}{0:F2}%}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>